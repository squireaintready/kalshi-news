# Kalshi API Credentials (optional - public endpoints work without auth)
KALSHI_EMAIL=
KALSHI_PASSWORD=

# LLM Provider Configuration
# Choose either "anthropic" or "openai"
LLM_PROVIDER=anthropic

# Anthropic API Key (if using Claude)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API Key (if using GPT-4)
# OPENAI_API_KEY=sk-...

# Flask Configuration
FLASK_SECRET_KEY=change-this-to-a-random-secret-key
FLASK_DEBUG=false

# Cache Configuration
# Options: "file" or "redis"
CACHE_TYPE=file
CACHE_DIR=cache
CACHE_TTL=3600

# Redis Configuration (only needed if CACHE_TYPE=redis)
# REDIS_URL=redis://localhost:6379/0

# Scheduler Configuration
ARTICLE_REFRESH_INTERVAL=60
MAX_MARKETS_TO_FETCH=10
MAX_ARTICLES_TO_GENERATE=5
